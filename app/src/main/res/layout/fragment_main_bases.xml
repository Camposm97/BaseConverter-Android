<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MainBasesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_main_bases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/my_label_border"
            android:gravity="center|center_vertical"
            android:text="@string/Binary"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="14sp"
            app:fontFamily="monospace" />

        <EditText
            android:id="@+id/tf_bin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_edit_text_border"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/Base_2"
            android:importantForAutofill="no"
            android:inputType="none"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/my_label_border"
            android:gravity="center"
            android:text="@string/Octal"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="14sp"
            app:fontFamily="monospace" />

        <EditText
            android:id="@+id/tf_oct"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_edit_text_border"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="none"
            android:enabled="false"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/my_label_border"
            android:gravity="center"
            android:text="@string/Decimal"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="14sp"
            app:fontFamily="monospace" />

        <EditText
            android:id="@+id/tf_dec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_edit_text_border"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="none"
            android:enabled="false"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/my_label_border"
            android:gravity="center"
            android:text="@string/Hexadecimal"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="14sp"
            app:fontFamily="monospace" />

        <EditText
            android:id="@+id/tf_hex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_edit_text_border"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="none"
            android:enabled="false"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>