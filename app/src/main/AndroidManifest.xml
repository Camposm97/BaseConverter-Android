<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.campos.baseconverter">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".view.activity.AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.FloatingPointConverterActivity" />
        <activity
            android:name=".view.activity.ShowResultsActivity"
            android:label="@string/history_name"
            android:parentActivityName=".view.activity.HistoryActivity" />
        <activity
            android:name=".view.activity.HistoryActivity"
            android:label="@string/history_name"
            android:parentActivityName=".view.activity.BaseConverterActivity" />
        <activity
            android:name=".view.activity.OptionsActivity"
            android:label="@string/option_name"
            android:parentActivityName=".view.activity.BaseConverterActivity" />
        <activity android:name=".view.activity.BaseConverterActivity"/>
    </application>
</manifest>